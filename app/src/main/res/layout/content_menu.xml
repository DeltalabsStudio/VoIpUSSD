<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dsbmobile.novatronicintegration.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <Button
        android:id="@+id/op1"
        android:layout_alignParentTop="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bt1"/>

    <Button
        android:id="@+id/op2"
        android:layout_below="@+id/op1"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bt2"/>

    <Button
        android:id="@+id/op3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bt3"/>

    <Button
        android:id="@+id/op4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/op3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bt4"/>

    <Button
        android:id="@+id/op5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/op4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bt5"/>

</RelativeLayout>
